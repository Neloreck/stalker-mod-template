{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "lib": ["esnext"],
    "noImplicitOverride": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["@typescript-to-lua/language-extensions", "lua-types/jit"],
    "jsx": "preserve",
    "jsxFactory": "JSXXML",
    "strict": true,
    "rootDir": "..",
    "baseUrl": "./mod",
    "paths": {
      "#/*": ["../../cli/*"],
      "@/*": ["../*"]
    }
  }
}
