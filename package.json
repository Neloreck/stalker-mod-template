{
  "name": "stalker-xrf-template",
  "version": "1.0.0",
  "author": "Neloreck",
  "repository": "https://github.com/xray-forge/stalker-xrs-template",
  "private": true,
  "scripts": {
    "setup": "git submodule init && git submodule update --recursive",
    "help": "ts-node -P ./cli/tsconfig.json cli/info/info.ts",
    "info": "ts-node -P ./cli/tsconfig.json cli/info/info.ts",
    "verify": "ts-node -P ./cli/tsconfig.json cli/verify/verify.ts",
    "link": "ts-node -P ./cli/tsconfig.json cli/link/link.ts",
    "unlink": "ts-node -P ./cli/tsconfig.json cli/link/unlink.ts",
    "engine": "ts-node -P ./cli/tsconfig.json cli/engine/engine.ts",
    "open_game_folder": "ts-node -P ./cli/tsconfig.json cli/open/open_game_folder.ts",
    "open_project_folder": "ts-node -P ./cli/tsconfig.json cli/open/open_project_folder.ts",
    "start_game": "ts-node -P ./cli/tsconfig.json cli/start_game/start_game.ts",
    "preview": "ts-node -P cli/tsconfig.json ./cli/preview/preview.ts",
    "logs": "ts-node -P cli/tsconfig.json cli/logs/logs.ts",
    "build": "ts-node -P cli/tsconfig.json ./cli/build/build.ts",
    "build:clean-only": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --clean --force",
    "build:clean": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --clean --all",
    "build:gold": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --clean --no-lua-logs --all",
    "build:no-resources": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --all --no-resources",
    "build:scripts": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --scripts",
    "build:configs": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --configs",
    "build:translations": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --translations",
    "build:ui": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --ui",
    "build:resources": "ts-node -P cli/tsconfig.json ./cli/build/build.ts --resources",
    "watch:scripts": "tstl -P ./cli/build/tsconfig.scripts.json --watch",
    "typecheck": "tstl -P ./cli/build/tsconfig.scripts.json --noEmit",
    "format": "prettier --write \"**/*.(js|ts|tsx|md)\" && eslint . --ext .ts,.tsx,.js --fix",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "parse_dir_as_json": "ts-node -P cli/tsconfig.json ./cli/parse/parse_dir_as_json.ts",
    "test": "jest --detectOpenHandles --config cli/test/jest.config.ts"
  },
  "dependencies": {
    "xray16": "file:./src/typedefs/xray16"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@typescript-to-lua/language-extensions": "1.0.0",
    "chalk": "4.1.2",
    "eslint": "^8.38.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "fengari": "0.1.4",
    "iconv-lite": "^0.6.3",
    "jest": "^29.5.0",
    "jsdom": "^21.1.1",
    "jsx-xml": "^0.2.3",
    "lua-types": "^2.13.1",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "typescript-to-lua": "^1.14.0"
  }
}
