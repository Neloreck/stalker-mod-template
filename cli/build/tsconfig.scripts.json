{
  "extends": "../../src/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "../../src/mod",
    "outDir": "../../target/gamedata"
  },
  "include": [
    "../../src/typedefs",
    "../../src/mod/lib",
    "../../src/mod/scripts",
    "../../src/mod/globals"
  ],
  "exclude": [
    "../../**/*.test.ts"
  ],
  "tstl": {
    "buildMode": "default",
    "extension": ".script",
    "noHeader": true,
    "luaTarget": "JIT",
    "noImplicitGlobalVariables": true,
    "noImplicitSelf": true,
    "noResolvePaths": [
      "xray16"
    ],
    "luaPlugins": [
      { "name": "./plugins/transform_luabind_class/plugin.ts" },
      { "name": "./plugins/global_declarations_transform.ts" },
      { "name": "./plugins/built_at_info.ts" },
      { "name": "./plugins/strip_lua_logger.ts" }
    ]
  }
}
